{
  "name": "storybook-mcp-api",
  "version": "1.3.1",
  "description": "Unified Storybook API Server - REST API + MCP protocol on a single port",
  "main": "src/index.js",
  "bin": {
    "storybook-mcp-api": "src/cli.js",
    "sb-mcp-api": "src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "test": "node test/run-tests.js",
    "test:integration": "node test/run-tests.js --integration",
    "test:sb8": "node test/run-tests.js --only test-sb8",
    "test:sb9": "node test/run-tests.js --only test-sb9",
    "test:sb10": "node test/run-tests.js --only test-sb10"
  },
  "keywords": [
    "storybook",
    "mcp",
    "model-context-protocol",
    "sse",
    "streaming",
    "api",
    "rest",
    "stories",
    "documentation",
    "components",
    "design-system",
    "angular",
    "react",
    "vue"
  ],
  "author": "issambenamara",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benamaraissam/storybook-mcp-api.git"
  },
  "homepage": "https://github.com/benamaraissam/storybook-mcp-api#readme",
  "bugs": {
    "url": "https://github.com/benamaraissam/storybook-mcp-api/issues"
  },
  "dependencies": {
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.0",
    "node-fetch": "^2.7.0",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "fastmcp": "^3.26.7",
    "zod": "^4.1.13",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
